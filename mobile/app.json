{
  "expo": {
    "name": "Jarvis Controller",
    "slug": "Jarvis Controller",
    "version": "1.0.0",
    "orientation": "default",
    "scheme": "jarviscontroller",
    "icon": "./assets/images/icons/ios-light.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.rovy.jarvis",
      "icon": "./assets/ios.icon",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Jarvis Controller uses your microphone to communicate with your Jarvis",
        "NSCameraUsageDescription": "Jarvis Controller uses your camera to detect hand gestures for interactive robot reactions.",
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#352CF4",
        "foregroundImage": "./assets/images/icons/adaptive-icon.png",
        "monochromeImage": "./assets/images/icons/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.ACCESS_FINE_LOCATION"],
      "minSdkVersion": 23,
      "package": "com.rovy.jarvis"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Jarvis Controller to access your microphone."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Jarvis Controller to access your camera for gesture detection."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#161616"
        }
      ],
      "expo-secure-store",
      "expo-screen-orientation",
      "./plugins/withAndroidBuildGradleTweaks"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "84365424-b8dc-4997-ad48-d883e582aadf"
      }
    }
  }
}
